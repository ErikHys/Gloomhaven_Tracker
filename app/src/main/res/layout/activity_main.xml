<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/ButtonName"
            android:layout_width="128dp"
            android:layout_height="72dp" android:id="@+id/button"
            android:visibility="visible" tools:visibility="visible"
            android:layout_marginEnd="142dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="142dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="330dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="330dp"
            android:background="@color/colorPrimaryPurple"/>
    <TextView
            android:text="@string/StartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="211dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="99dp" android:fontFamily="sans-serif-black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"
            android:textColor="@color/purple_700" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>